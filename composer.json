{
    "name": "drupal/legacy-project",
    "description": "Project template for Drupal 8 projects with composer following drupal/drupal layout",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://www.drupal.org/project/drupal",
    "support": {
        "docs": "https://www.drupal.org/docs/user_guide/en/index.html",
        "chat": "https://www.drupal.org/node/314178"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "require": {
        "bower-asset/blazy": "^1.8",
        "bower-asset/slick-carousel": "^1.8",
        "composer/installers": "^2.2",
        "cweagans/composer-patches": "^1.7",
        "drupal/addtoany": "^2.0",
        "drupal/admin_toolbar": "^3.4",
        "drupal/advagg": "^6.0@alpha",
        "drupal/advupdate": "^1.3",
        "drupal/asset_injector": "^2.19",
        "drupal/backup_migrate": "^5.0",
        "drupal/blazy": "^2.22",
        "drupal/bootstrap": "^3.30",
        "drupal/bootstrap5": "^3.0",
        "drupal/captcha": "^2.0",
        "drupal/coder": "^8.3",
        "drupal/config_partial_export": "^2.0@alpha",
        "drupal/core-composer-scaffold": "^10",
        "drupal/core-project-message": "^10",
        "drupal/core-recommended": "^10",
        "drupal/country": "^2.0",
        "drupal/crop": "^2.3",
        "drupal/ctools": "^4.0",
        "drupal/devel": "^5.1",
        "drupal/devel_entity_updates": "^4.1",
        "drupal/devel_php": "^1.6",
        "drupal/disqus": "^2.0@alpha",
        "drupal/editor_advanced_link": "^2.2",
        "drupal/entity_reference_revisions": "^1.11",
        "drupal/extlink": "^1.7",
        "drupal/fast_404": "^3.2",
        "drupal/fences": "^3.0",
        "drupal/field_group": "^3.4",
        "drupal/file_mdm": "^3.0",
        "drupal/filefield_paths": "^1.0@beta",
        "drupal/google_analytics": "^4.0",
        "drupal/honeypot": "^2.1",
        "drupal/image_widget_crop": "^2.4",
        "drupal/imageapi_optimize": "^4.0",
        "drupal/imageapi_optimize_webp": "^2.0",
        "drupal/imagemagick": "^3.7",
        "drupal/libraries": "^4.0",
        "drupal/linkit": "^6.1",
        "drupal/menu_trail_by_path": "^2.0",
        "drupal/metatag": "^2.0",
        "drupal/paragraphs": "^1.17",
        "drupal/pathauto": "^1.12",
        "drupal/purge": "^3.5",
        "drupal/purge_purger_http": "^1.2",
        "drupal/rabbit_hole": "^1.0@beta",
        "drupal/recaptcha": "^3.2",
        "drupal/redirect": "^1.9",
        "drupal/redis": "^1.7",
        "drupal/schema_metatag": "^3.0",
        "drupal/seckit": "^2.0",
        "drupal/simple_sitemap": "^4.1",
        "drupal/sophron": "^2.0",
        "drupal/sticky_sharrre_bar": "^1.5",
        "drupal/token": "^1.13",
        "drupal/twig_field_value": "^2.0",
        "drupal/twig_tweak": "^3.2",
        "drupal/twigsuggest": "^1.0@RC",
        "drupal/upgrade_status": "^4.0",
        "drupal/views_bootstrap": "^5.5@alpha",
        "drupal/views_infinite_scroll": "^2.0",
        "drupal/webp": "^1.0@RC",
        "drupal/yoast_seo": "^1.8",
        "drush/drush": "^12.4",
        "geshi/geshi": "v1.0.9.1",
        "grasmash/drupal-security-warning": "1.x-dev",
        "oomphinc/composer-installers-extender": "^2.0",
        "topfloor/composer-cleanup-vcs-dirs": "^1.1"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "discard-changes": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "8.1"
        },
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "drupal/core-composer-scaffold": true,
            "drupal/core-project-message": true,
            "grasmash/drupal-security-warning": true,
            "oomphinc/composer-installers-extender": true,
            "topfloor/composer-cleanup-vcs-dirs": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "drupal-scaffold": {
            "initial": {
                ".editorconfig": ".editorconfig",
                ".gitattributes": ".gitattributes"
            },
            "locations": {
                "web-root": "./"
            },
            "file-mapping": {
                "[web-root]/.htaccess": {
                    "mode": "skip"
                },
                "[web-root]/robots.txt": {
                    "mode": "skip"
                }
            }
        },
        "merge-plugin": {
            "include": [
                "modules/contrib/*/composer.libraries.json",
                "modules/custom/*/composer.json",
                "themes/custom/*/composer.json"
            ]
        },
        "installer-types": ["component", "bower-asset", "npm-asset"],
        "installer-paths": {
            "core": ["type:drupal-core"],
            "libraries/chosen": ["npm-asset/chosen-js"],
            "libraries/slick": ["bower-asset/slick-carousel"],
            "libraries/{$name}": ["type:drupal-library", "type:component", "type:bower-asset", "type:npm-asset"],
            "modules/contrib/{$name}": ["type:drupal-module"],
            "profiles/contrib/{$name}": ["type:drupal-profile"],
            "themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"],
            "modules/custom/{$name}": ["type:drupal-custom-module"],
            "themes/custom/{$name}": ["type:drupal-custom-theme"]
        },
        "drupal-core-project-message": {
            "include-keys": ["homepage", "support"],
            "post-create-project-cmd-message": [
                "<bg=blue;fg=white>                                                         </>",
                "<bg=blue;fg=white>  Congratulations, youâ€™ve installed the Drupal codebase  </>",
                "<bg=blue;fg=white>  from the drupal/legacy-project template!               </>",
                "<bg=blue;fg=white>                                                         </>",
                "",
                "<bg=yellow;fg=black>Next steps</>:",

                "  * Install the site: https://www.drupal.org/docs/8/install",
                "  * Read the user guide: https://www.drupal.org/docs/user_guide/en/index.html",
                "  * Get support: https://www.drupal.org/support",
                "  * Get involved with the Drupal community:",
                "      https://www.drupal.org/getting-involved",
                "  * Remove the plugin that prints this message:",
                "      composer remove drupal/core-project-message"
            ]
        },
        "enable-patching": true,
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "patches": {
            "drupal/core": {
                "2981434: Default theme favicon for administration theme": "https://www.drupal.org/files/issues/2019-12-14/default-theme-favicon-for-administration-theme-2981434-7.patch",
                "3416141: big_pipe.js' checkMutation() does not check if node exists before using it": "https://www.drupal.org/files/issues/2024-01-21/drupal-big_pipe_does_not_check_before_using_node_object-3416141.patch",
                "Own: Hide version of Drupal": "patches/drupal-core-hide-version.patch"
            },
            "drupal/geshifilter": {
                "3137937: Theme functions are deprecated in geshifield": "https://www.drupal.org/files/issues/2020-11-06/theme_function_deprecated--3137937-2.patch"
            },
            "drupal/disqus": {
                "3359581: Uncaught TypeError: $(...).once is not a function": "https://git.drupalcode.org/project/disqus/-/merge_requests/8.diff",
                "1508786: Lazy load / async load Disqus libraries for better performance": "https://www.drupal.org/files/issues/2022-10-19/disqus-1508786-lazyload-intersectionobserver-46-2.0.x.patch",
                "3344834: TypeError: in_array(): Argument #2 ($haystack) must be of type array, null given in in_array()": "https://git.drupalcode.org/project/disqus/-/merge_requests/7.diff"
            }
        }
    },
    "scripts": {
        "code-sniff": [
            "./vendor/bin/phpcs --standard=Drupal --extensions=php,module,inc,install,test,profile,theme,info,txt,md --ignore=node_modules,bower_components,vendor,styleguide ./modules/custom ./themes/custom",
            "./vendor/bin/phpcs --standard=DrupalPractice --extensions=php,module,inc,install,test,profile,theme,info,txt,md --ignore=node_modules,bower_components,vendor,styleguide ./modules/custom  ./themes/custom"
        ],
        "code-fix": [
            "./vendor/bin/phpcbf --standard=Drupal --extensions=php,module,inc,install,test,profile,theme,info,txt,md --ignore=node_modules,bower_components,vendor,styleguide ./modules/custom ./themes/custom",
            "./vendor/bin/phpcbf --standard=DrupalPractice --extensions=php,module,inc,install,test,profile,theme,info,txt,md --ignore=node_modules,bower_components,vendor,styleguide ./modules/custom ./themes/custom"
        ]
    }
}
