{% set classes = [
  'block',
  'block-' ~ configuration.provider|clean_class,
  'block-' ~ plugin_id|clean_class,
  'clearfix',
  'row'
] %}
<section{{ attributes.addClass(classes) }}>
  {% block content %}
    {{ title_prefix }}
    <div class="col-sm-4">
      <h2{{ title_attributes.addClass('block-title') }}>{{ label }}</h2>
    </div>
    <div class="col-sm-4">
      {{ content.body }}
    </div>
    <div class="col-sm-4 group-right">
      {{ content.field_link }}
    </div>
    {{ title_suffix }}
  {% endblock %}
</section>

