{{ attach_library('core/drupal.dialog.ajax') }}
{% set classes = [
  node.bundle|clean_class,
  node.isPromoted() ? 'is-promoted',
  node.isSticky() ? 'is-sticky',
  not node.isPublished() ? 'is-unpublished',
  view_mode ? view_mode|clean_class,
  'clearfix',
  'row'
] %}
<article{{ attributes.addClass(classes) }}>
  <div{{ content_attributes.addClass('content') }}>
    {% if content.field_logo_media|field_value is not empty %}
      <div class="col-sm-6 col-md-4 bs-region bs-region--left">
        {{ content.field_logo_media }}
      </div>
    {% endif %}
    <div class="col-sm-6 col-md-8 bs-region bs-region--right">
      {{ content|without('field_logo_media', 'field_project_images_media') }}
    </div>
    <div class="col-sm-12 bs-region bs-region--bottom">
      {{ content.field_project_images_media }}
    </div>
  </div>
</article>
